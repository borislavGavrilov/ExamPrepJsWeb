 <section class="form-container">
            <h2>Edit Recipe</h2>
            <form method="post">
                <label for="name">Product Name:</label>
                <input type="text" id="name" name="name" value="{{getProduct.name}}">

                <label for="skin">Skin Type:</label>
                <textarea id="skin" name="skin">{{getProduct.skin}}</textarea>

                <label for="description">Product Description:</label>
                <textarea id="description" name="description">{{getProduct.description}}</textarea>

                <label for="ingredients">Key Ingredients:</label>
                <textarea id="ingredients" name="ingredients">{{getProduct.ingredients}}</textarea>

                <label for="benefits">Benefits:</label>
                <textarea id="benefits" name="benefits">{{getProduct.benefits}}</textarea>

                <label for="price">Price:</label>
                <input type="number" id="price" name="price" value="{{getProduct.price}}">

                <label for="image">Image URL:</label>
                <input type="url" id="image" name="image" value="{{getProduct.image}}">

                <button type="submit">Create Product Card</button>
   