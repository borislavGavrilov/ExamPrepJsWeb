
        <section class="form-container">
            <h2>Create Product Card</h2>
            <form method="post">
                <label for="name">Product Name:</label>
                <input type="text" id="name" name="name" value="{{productData.name}}">

                <label for="skin">Skin Type:</label>
                <textarea id="skin" name="skin">{{productData.skin}}</textarea>

                <label for="description">Product Description:</label>
                <textarea id="description" name="description">{{productData.description}}</textarea>

                <label for="ingredients">Key Ingredients:</label>
                <textarea id="ingredients" name="ingredients" value = "{{productData.ingredients}}"></textarea>

                <label for="benefits">Benefits:</label>
                <textarea id="benefits" name="benefits" value = "{{productData.benefits}}"></textarea>

                <label for="price">Price:</label>
                <input type="number" id="price" name="price" value="{{productData.price}}">

                <label for="image">Image URL:</label>
                <input type="url" id="image" name="image" value="{{productData.image}}">

                <button type="submit">Create Product Card</button>
            </form>
        </section>